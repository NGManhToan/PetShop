@model List<PetShop.Models.Cart.CartViewModel>
@{
    ViewBag.Title = "Cart";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Shopping Cart</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Cart</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- End Banner Area -->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Select</th>
                            <th scope="col">Image</th>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <tbody>
                            @foreach (var cartItem in Model)
                            {
                                var product = cartItem;
                                if (product != null)
                                {
                                    var total = product.Price * cartItem.Quantity;
                                    <tr>
                                        <td>
                                            <div>
                                                <input type="checkbox" id="select-@product.Id" onclick="updateGrandTotal()">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex">
                                                <img src="@product.Image" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <p>@product.Name</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h5>@product.Price.ToString("C")</h5>
                                        </td>
                                        <td>
                                            <div class="product_count">
                                                <input type="text" name="qty" id="@product.Id" maxlength="12"
                                                    value="@cartItem.Quantity" title="Quantity:" class="input-text qty">
                                                <button onclick="updateQuantity(@product.Id, 1, @product.Price);updateGrandTotal()"
                                                    class="increase items-count" type="button">
                                                    <i class="lnr lnr-chevron-up"></i>
                                                </button>
                                                <button onclick="updateQuantity(@product.Id, -1, @product.Price);updateGrandTotal()"
                                                    class="reduced items-count" type="button">
                                                    <i class="lnr lnr-chevron-down"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td id="total-@product.Id">
                                            <h5>@total.ToString("C")</h5>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    }
                    else
                    {
                        <tbody id="cartItemsDisplay">
                            <!-- This is where the cart items will be dynamically added -->
                        </tbody>

                    }

                    
                </table>

                <div style="display: flex;justify-content: space-between;">
                    <a class="gray_btn " href="#">Continue Shopping</a>

                    <div class="d-flex align-items-center">
                        <input type="text" placeholder="Coupon Code">
                        <a class="primary-btn ml-2" href="#">Apply</a>
                    </div>
                </div>

                <table class="table">
                    <tr class="shipping_area">
                        <td colspan="3">
                            <select class="form-select form-select-sm mb-3" id="city" aria-label=".form-select-sm">
                                <option value="" selected>Chọn tỉnh thành</option>
                            </select>
                        </td>
                        <td colspan="3">
                            <select class="form-select form-select-sm mb-3" id="district" aria-label=".form-select-sm">
                                <option value="" selected>Chọn quận huyện</option>
                            </select>
                        </td>
                        <td colspan="3">
                            <select class="form-select form-select-sm mb-3" id="ward" aria-label=".form-select-sm">
                                <option value="" selected>Chọn phường xã</option>
                            </select>
                        </td>
                    </tr>
                </table>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Full Name">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="contactAddress">Contact Address</label>
                            <input type="text" class="form-control" id="contactAddress" name="contactAddress" placeholder="Contact Address">
                        </div>
                    </div>
                </div>

                <!-- Additional styling for responsiveness -->
                <style>
                    /* Center-align the "Proceed to checkout" button */
                    #proceed-to-checkout {
                        text-align: center;
                        margin-top: 20px;
                    }

                    /* Add some padding to the table for better mobile display */
                    media (max-width: 768px) {
                        .table {
                            margin-bottom: 20px;
                        }
                    }
                </style>

                
                <!-- Phần hiển thị tổng tiền -->
                <h4 id="grand-total-display" style="text-align: right;">Grand Total: $<span id="grand-total">0.00</span></h4>
                <!-- Nút thanh toán -->
                <a class="primary-btn" style="float:right" id="proceed-to-checkout" href="#">Proceed to checkout</a>
                
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/javascript2.js"></script>
<script src="~/js/javascript1.js"></script>