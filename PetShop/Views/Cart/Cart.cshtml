@model List<PetShop.Models.Cart.CartViewModel>
@{
    ViewBag.Title = "Cart";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Shopping Cart</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Cart</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<script src="~/js/javascript1.js"></script>

<!-- End Banner Area -->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Select</th>
                            <th scope="col">Image</th>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <tbody>
                            @foreach (var cartItem in Model)
                            {


                            }
                        </tbody>
                        
                    }
                    else
                    {
                        <tbody id="cartItemsDisplay">
                            <!-- This is where the cart items will be dynamically added -->
                        </tbody>
                    }
                    
                </table>
                
                <!-- Phần hiển thị tổng tiền -->
                <h4 id="grand-total-display" style="text-align: right;">Grand Total:</h4>
                <!-- Nút thanh toán -->
                <a class="primary-btn" style="float: right;" href="#">Proceed to checkout</a>
                <style>
                    .checkout_btn_inner {
                        justify-content: flex-end;
                    }
                </style>
            </div>
        </div>
    </div>
</section>
