@model PetShop.Models.Login.LoginModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Responsive Login & Register Form Using Bootstrap 5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/stylelogin.css" rel="stylesheet" />
    <link href="~/css/styleregister.css" rel="stylesheet" />
</head>

<body>

    <div class="container">
        <div class="col-md-4 offset-md-3 col-xs-12">
            <!-- login box Code -->
            <div class="blmd-wrapp">
                <!-- Register form container Code -->
                <div class="register-container">
                    <form method="post" asp-action="Register" class="clearfix form-hidden" id="Register-form" style="margin-right:30px">
                        <h1>Sign Up</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group blmd-form">
                                    <div class="blmd-line">
                                        <input type="text" name="firstname" autocomplete="off" id="firstname" class="form-control">
                                        <label class="blmd-label">First Name</label>
                                    </div>
                                    <p id="firstname-error-message" style="color: red; text-align: center; display: none;">Vui lòng điền tên của bạn.</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group blmd-form">
                                    <div class="blmd-line">
                                        <input type="text" name="lastname" autocomplete="off" id="lastname" class="form-control">
                                        <label class="blmd-label">Last Name</label>
                                    </div>
                                    <p id="lastname-error-message" style="color: red; text-align: center; display: none;">Vui lòng điền họ của bạn.</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group blmd-form">
                                    <div class="blmd-line">
                                        <input type="text" name="username" autocomplete="off" id="username" class="form-control">
                                        <label class="blmd-label">Email</label>
                                    </div>
                                    <p id="username-error-message" style="color: red; text-align: center; display: none;">Vui lòng điền email của bạn.</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group blmd-form">
                                    <div class="blmd-line">
                                        <input type="password" name="password" autocomplete="off" id="password" class="form-control">
                                        <label class="blmd-label">Password</label>
                                    </div>
                                    <p id="password-error-message1" style="color: red; text-align: center; display: none;">Vui lòng điền mật khẩu của bạn.</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group blmd-form">
                                    <div class="blmd-line">
                                        <input type="password" name="rePassword" autocomplete="off" id="rePassword" class="form-control">
                                        <label class="blmd-label">Repeat Password</label>
                                    </div>
                                    <p id="rePassword-error-message" style="color: red; text-align: center; display: none;">Vui lòng nhập lại mật khẩu của bạn.</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <button style="margin-left:15px" type="submit" class="btn btn-blmd ripple-effect btn-warning btn-lg btn-block" id="register-button">Register</button>
                            </div>
                        </div>
                        <br />
                    </form>
                    <div class="col-md-12 text-center">
                        <p>Don't have an account? <a href="@Url.Action("Login","Login")" id="switch-to-register-link">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src="~/js/script.js"></script>

</body>

</html>
